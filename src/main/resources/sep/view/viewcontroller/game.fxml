<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.*?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.control.Button?>

<?import javafx.scene.image.ImageView?>
<AnchorPane
    id="master-container" stylesheets="@game.css"
    fx:id="masterContainer"
    fx:controller="sep.view.scenecontrollers.GameJFXController"
    xmlns="http://javafx.com/javafx/19" xmlns:fx="http://javafx.com/fxml/1"
>
    <children>
        <!--Game Course-->
        <AnchorPane
            id="course-container" stylesheets="@game.css"
            fx:id="courseContainer"
            AnchorPane.topAnchor="0.0" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0"
        >
            <ScrollPane
                id="course-scroll-pane" stylesheets="@game.css"
                fx:id="courseScrollPane"
                AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0" AnchorPane.bottomAnchor="0.0"
            >
                <AnchorPane
                    id="course-scroll-pane-content" stylesheets="@game.css"
                    fx:id="courseScrollPaneContent"
                />
            </ScrollPane>
        </AnchorPane>
        <!--Game UI-->
        <HBox
            id="ui-header" stylesheets="@game.css"
            fx:id="uiHeader"
            AnchorPane.topAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0"
        >
            <children>
                <Label
                    text="Current Phase ???"
                    id="ui-header-phase" stylesheets="@game.css"
                    fx:id="UIHeaderPhaseLabel"
                />
                <Label
                    id="ui-header-game-state" stylesheets="@game.css"
                    fx:id="UIHeaderGameStateDescriptionLabel"
                />
            </children>
        </HBox>
        <HBox
            id="player-container" stylesheets="@game.css"
            fx:id="playerContainer"
            AnchorPane.topAnchor="20.0" AnchorPane.rightAnchor="20.0"
        />
        <HBox
            id="ui-footer" stylesheets="@game.css"
            fx:id="uiFooter"
            AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0"
        >
            <children>
                <HBox
                    id="ui-footer-register-slots" stylesheets="@game.css"
                >
                    <children>
                        <AnchorPane
                            fx:id="registerSlot1"
                        />
                        <AnchorPane
                            fx:id="registerSlot2"
                        />
                        <AnchorPane
                            fx:id="registerSlot3"
                        />
                        <AnchorPane
                            fx:id="registerSlot4"
                        />
                        <AnchorPane
                            fx:id="registerSlot5"
                        />
                    </children>
                </HBox>
                <HBox
                    id="got-register-cards-hbox" stylesheets="@game.css"
                >
                    <children>
                        <VBox
                            styleClass="got-register-cards-vbox" stylesheets="@game.css"
                        >
                            <children>
                                <AnchorPane
                                    fx:id="gotRegisterCardSlot1"
                                />
                                <AnchorPane
                                    fx:id="gotRegisterCardSlot2"
                                />
                                <AnchorPane
                                    fx:id="gotRegisterCardSlot3"
                                />
                            </children>
                        </VBox>
                        <VBox
                            styleClass="got-register-cards-vbox" stylesheets="@game.css"
                        >
                            <children>
                                <AnchorPane
                                    fx:id="gotRegisterCardSlot4"
                                />
                                <AnchorPane
                                    fx:id="gotRegisterCardSlot5"
                                />
                                <AnchorPane
                                    fx:id="gotRegisterCardSlot6"
                                />
                            </children>
                        </VBox>
                        <VBox
                            styleClass="got-register-cards-vbox" stylesheets="@game.css"
                        >
                            <children>
                                <AnchorPane
                                    fx:id="gotRegisterCardSlot7"
                                />
                                <AnchorPane
                                    fx:id="gotRegisterCardSlot8"
                                />
                                <AnchorPane
                                    fx:id="gotRegisterCardSlot9"
                                />
                            </children>
                        </VBox>
                    </children>
                </HBox>
            </children>
        </HBox>
    </children>
</AnchorPane>
