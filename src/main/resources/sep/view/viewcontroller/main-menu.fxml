<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<BorderPane
        id="master-container" stylesheets="@globals.css"
        fx:controller="sep.view.scenecontrollers.MainMenuJFXController"
        xmlns="http://javafx.com/javafx/19" xmlns:fx="http://javafx.com/fxml/1"
>
    <top>
        <AnchorPane BorderPane.alignment="CENTER">
            <children>
                <Label
                    text="Robo Rally"
                    styleClass="text-2xl" alignment="CENTER"
                    AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0"
                />
            </children>
        </AnchorPane>
    </top>
    <center>
        <AnchorPane
            id="btn-container" stylesheets="@main-menu.css"
            BorderPane.alignment="CENTER"
        >
            <children>
                <Button
                    text="HOST"
                    styleClass="primary-btn"
                    onAction="#onHostBtn"
                    AnchorPane.leftAnchor="30.0" AnchorPane.topAnchor="0.0"
                />
                <Button
                    text="JOIN"
                    styleClass="primary-btn"
                    onAction="#onJoinBtn"
                    AnchorPane.rightAnchor="30.0" AnchorPane.topAnchor="0.0"
                />
                <Label
                    styleClass="text-xl-error" alignment="CENTER"
                    fx:id="sessionJoinErrorField"
                    AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="100.0"
                />
            </children>
        </AnchorPane>
    </center>
    <bottom>
        <AnchorPane BorderPane.alignment="CENTER">
            <children>
                <Button
                    text="Exit"
                    styleClass="danger-btn"
                    onAction="#onExitBtn"
                    AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0"
                />
            </children>
        </AnchorPane>
    </bottom>
</BorderPane>
