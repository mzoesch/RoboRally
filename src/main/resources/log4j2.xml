<?xml version="1.0" encoding="UTF-8"?>

<Configuration status="INFO">

    <Appenders>
        <Console name="console" target="SYSTEM_OUT">
            <PatternLayout pattern="%d{yyyy-MM-dd HH:mm:ss.SSS} [%t] %highlight{%-5level} %logger{36} - %msg%n" />
        </Console>

        <File name="wrapper" fileName="log/wrapper.log">
            <PatternLayout pattern="%d{yyyy-MM-dd HH:mm:ss.SSS} [%t] %-5level %logger{36} - %msg%n" />
        </File>
        <File name="server" fileName="log/server.log">
            <PatternLayout pattern="%d{yyyy-MM-dd HH:mm:ss.SSS} [%t] %-5level %logger{36} - %msg%n" />
        </File>
        <File name="client" fileName="log/client.log">
            <PatternLayout pattern="%d{yyyy-MM-dd HH:mm:ss.SSS} [%t] %-5level %logger{36} - %msg%n" />
        </File>
    </Appenders>

    <Loggers>

        <Logger name="sep" level="trace" additivity="true">
            <AppenderRef level="trace" ref="wrapper" />
        </Logger>

        <Logger name="sep.server" level="trace" additivity="true">
            <AppenderRef level="trace" ref="server" />
        </Logger>

        <Logger name="sep.view" level="trace" additivity="true">
            <AppenderRef level="trace" ref="client" />
        </Logger>

        <Root level="trace">
            <AppenderRef level="info" ref="console" />
        </Root>

    </Loggers>

</Configuration>
